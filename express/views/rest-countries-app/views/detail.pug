html
    head
        title= foundCountry.name
    body
        h1= foundCountry.name
        h3= `Details about ${foundCountry.name}`
        
        p= `Capital City: ${foundCountry.capital}`
        p= `Population: ${foundCountry.population}`
        p= `Land Area: ${foundCountry.area} sq km`
        div Languages
        = `${foundCountry.languages[0].name}`
        p
        div Currencies
        = `${foundCountry.currencies[0].name} / ${foundCountry.currencies[0].symbol}`
        p
        div Flag
        img(src=foundCountry.flag alt=`Flag of ${foundCountry.name}` width='10%' length='10%')
        p
        div Location
        img(src=`https://geology.com/world/${foundCountry.name.toLowerCase()}-satellite-image.shtml`)
